        android:theme="@style/AppTheme">
        <activity android:name=".FiltersActivity">

        </activity>
        <activity android:name=".AddCustomerActivity" />
        <activity android:name=".CustomerProfileActivity"
            />
        <activity
            android:name=".TaskBottomActivity"
            android:label="@string/title_activity_task_bottom" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterDeliveryManActivity"
            android:label="@string/title_activity_register_delivert_man" />
