<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="5sp"
    android:layout_height="120sp">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:id="@+id/deliveryboy_image"
        android:layout_height="match_parent"
        android:src="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:id="@+id/deliveryboy_name"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="Name"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_call_black_24dp"
                android:paddingRight="3sp"
                android:paddingStart="1sp"
                android:layout_marginStart="-4sp"
                android:paddingEnd="3sp"
                android:paddingTop="3sp"
                android:paddingBottom="3sp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:id="@+id/deliveryboy_phonenumber"
                android:text="deliveryboy Number"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:layout_marginStart="-4sp"
                android:paddingBottom="8sp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:id="@+id/deliveryboy_address"
                android:text="Address"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>